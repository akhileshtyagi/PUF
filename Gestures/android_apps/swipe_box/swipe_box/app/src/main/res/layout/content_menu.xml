<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_menu" tools:context=".Menu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Swipe Box"
        android:id="@+id/test_swipe_box_button"
        android:layout_alignTop="@+id/collect_swipe_responses_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collect Swipe Responses"
        android:id="@+id/collect_swipe_responses_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analyze Responses"
        android:id="@+id/analyze_responses_button"
        android:layout_below="@+id/test_swipe_box_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Responses"
        android:id="@+id/save_responses_button"
        android:layout_below="@+id/output_responses_to_csv_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Responses"
        android:id="@+id/load_responses_button"
        android:layout_below="@+id/output_responses_to_csv_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Output Responses To Json"
        android:id="@+id/output_responses_to_csv_button"
        android:layout_below="@+id/analyze_responses_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/output_console_edit_text"
        android:layout_below="@+id/save_responses_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/load_responses_button"
        android:layout_alignEnd="@+id/load_responses_button"
        android:minHeight="250dp"
        android:editable="false"
        android:elegantTextHeight="false"
        android:clickable="false"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:minLines="15" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authenticate\n Against Responses"
        android:id="@+id/authenticate_against_responses"
        android:layout_below="@+id/collect_swipe_responses_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Output Analysis to CSV"
        android:id="@+id/output_analysis_to_csv_button"
        android:layout_below="@+id/authenticate_against_responses"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
